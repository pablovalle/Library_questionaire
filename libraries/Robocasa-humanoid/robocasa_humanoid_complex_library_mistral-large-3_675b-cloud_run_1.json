{
    "atomic_library": [
        {
            "id": "pick_up",
            "description": "Approach, grasp, and lift an object from a surface or location.",
            "parameters": [
                "obj_id",
                "source_id"
            ],
            "pre_conditions": [
                "[obj_id] is at rest on [source_id] and not grasped",
                "end_effector is empty"
            ],
            "post_conditions": [
                "end_effector holds [obj_id]",
                "[obj_id] is lifted from [source_id]"
            ]
        },
        {
            "id": "place",
            "description": "Lower and release a held object onto or into a target location/object.",
            "parameters": [
                "obj_id",
                "target_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "target_id is accessible"
            ],
            "post_conditions": [
                "[obj_id] is supported by or contained within [target_id]",
                "end_effector is empty"
            ]
        },
        {
            "id": "open",
            "description": "Actuate a mechanism to open it (door, drawer, appliance, container).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: closed"
            ],
            "post_conditions": [
                "[joint_id] is in state: open",
                "end_effector is empty"
            ]
        },
        {
            "id": "close",
            "description": "Actuate a mechanism to close it (door, drawer, appliance, container).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: open"
            ],
            "post_conditions": [
                "[joint_id] is in state: closed",
                "end_effector is empty"
            ]
        }
    ]
}
{
    "atomic_library": [
        {
            "id": "move_base_to",
            "description": "Navigate the robot base to a specified location in the environment",
            "parameters": [
                "location"
            ],
            "pre_conditions": [
                "robot_base_at != location",
                "path_to_location_is_navigable"
            ],
            "post_conditions": [
                "robot_base_at == location"
            ]
        },
        {
            "id": "move_ee_to",
            "description": "Move the end-effector to a specified pose relative to a reference frame or object",
            "parameters": [
                "target_pose",
                "reference_frame"
            ],
            "pre_conditions": [
                "kinematically_reachable(target_pose)",
                "no_collision_on_path"
            ],
            "post_conditions": [
                "ee_at_pose == target_pose"
            ]
        },
        {
            "id": "reach_for_object",
            "description": "Move the end-effector to a grasp-ready pose near an object",
            "parameters": [
                "obj_id",
                "pre_grasp_pose"
            ],
            "pre_conditions": [
                "object_visible(obj_id)",
                "kinematically_reachable(pre_grasp_pose)",
                "gripper_empty"
            ],
            "post_conditions": [
                "ee_at_pose == pre_grasp_pose",
                "object_within_grasp_range(obj_id)"
            ]
        },
        {
            "id": "grasp_object",
            "description": "Close the gripper or apply grasping action to secure an object",
            "parameters": [
                "obj_id",
                "grasp_strategy"
            ],
            "pre_conditions": [
                "object_within_grasp_range(obj_id)",
                "gripper_open",
                "no_object_held"
            ],
            "post_conditions": [
                "object_held == obj_id",
                "gripper_closed_on(obj_id)"
            ]
        },
        {
            "id": "release_object",
            "description": "Open the gripper or release mechanism to let go of a currently held object",
            "parameters": [],
            "pre_conditions": [
                "object_held != null"
            ],
            "post_conditions": [
                "released_object == previous(object_held)",
                "object_held == null",
                "gripper_open"
            ]
        },
        {
            "id": "lift_object",
            "description": "Lift a grasped object vertically to a safe transport height",
            "parameters": [
                "lift_height"
            ],
            "pre_conditions": [
                "object_held != null",
                "no_obstacle_above_within(lift_height)"
            ],
            "post_conditions": [
                "held_object_height_increased_by(lift_height)"
            ]
        },
        {
            "id": "lower_object",
            "description": "Lower a grasped object vertically until it reaches a support surface or desired height",
            "parameters": [
                "target_height"
            ],
            "pre_conditions": [
                "object_held != null",
                "no_obstacle_below_to(target_height)"
            ],
            "post_conditions": [
                "held_object_height == target_height or supported_by_surface(held_object)"
            ]
        },
        {
            "id": "approach_surface",
            "description": "Move the end-effector toward a surface to a specified approach distance",
            "parameters": [
                "surface_id",
                "approach_pose"
            ],
            "pre_conditions": [
                "surface_known(surface_id)",
                "kinematically_reachable(approach_pose)"
            ],
            "post_conditions": [
                "ee_at_pose == approach_pose"
            ]
        },
        {
            "id": "place_on_surface",
            "description": "Place a held object on a target surface at a specified pose",
            "parameters": [
                "surface_id",
                "place_pose"
            ],
            "pre_conditions": [
                "object_held != null",
                "surface_clear_at(surface_id, place_pose)",
                "kinematically_reachable(place_pose)"
            ],
            "post_conditions": [
                "object_on_surface(object_held, surface_id, place_pose)",
                "object_held == null",
                "gripper_open"
            ]
        },
        {
            "id": "place_inside_container",
            "description": "Place a held object into a target container or receptacle",
            "parameters": [
                "container_id",
                "insert_pose"
            ],
            "pre_conditions": [
                "object_held != null",
                "container_open_or_accessible(container_id)",
                "kinematically_reachable(insert_pose)"
            ],
            "post_conditions": [
                "object_in_container(object_held, container_id)",
                "object_held == null",
                "gripper_open"
            ]
        },
        {
            "id": "place_on_object",
            "description": "Place a held object on top of another specified object",
            "parameters": [
                "target_obj_id",
                "place_pose"
            ],
            "pre_conditions": [
                "object_held != null",
                "target_object_stable(target_obj_id)",
                "kinematically_reachable(place_pose)"
            ],
            "post_conditions": [
                "object_on_object(object_held, target_obj_id, place_pose)",
                "object_held == null",
                "gripper_open"
            ]
        },
        {
            "id": "stack_object",
            "description": "Place a held object on top of a stack of objects while maintaining alignment",
            "parameters": [
                "stack_base_id",
                "stack_height"
            ],
            "pre_conditions": [
                "object_held != null",
                "stack_stable(stack_base_id)",
                "kinematically_reachable(stack_top_pose(stack_base_id, stack_height))"
            ],
            "post_conditions": [
                "object_added_to_stack(object_held, stack_base_id)",
                "object_held == null",
                "gripper_open"
            ]
        },
        {
            "id": "orient_held_object",
            "description": "Rotate a held object to achieve a desired orientation (e.g., upside down)",
            "parameters": [
                "target_orientation"
            ],
            "pre_conditions": [
                "object_held != null",
                "rotation_feasible(target_orientation)"
            ],
            "post_conditions": [
                "held_object_orientation == target_orientation"
            ]
        },
        {
            "id": "open_articulated_element",
            "description": "Open an articulated element such as a cabinet door, drawer, or appliance door",
            "parameters": [
                "joint_id",
                "open_angle"
            ],
            "pre_conditions": [
                "joint_is_closed_or_partially_closed(joint_id)",
                "no_obstacle_in_open_path(joint_id, open_angle)"
            ],
            "post_conditions": [
                "joint_angle(joint_id) >= open_angle",
                "joint_state(joint_id) == open"
            ]
        },
        {
            "id": "close_articulated_element",
            "description": "Close an articulated element such as a cabinet door, drawer, or appliance door",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "joint_state(joint_id) == open",
                "no_obstacle_in_close_path(joint_id)"
            ],
            "post_conditions": [
                "joint_state(joint_id) == closed",
                "joint_angle(joint_id) == fully_closed"
            ]
        },
        {
            "id": "push_object",
            "description": "Apply a pushing motion to translate an object along a surface without grasping it",
            "parameters": [
                "obj_id",
                "push_direction",
                "push_distance"
            ],
            "pre_conditions": [
                "object_on_surface(obj_id)",
                "contact_point_reachable(obj_id)",
                "path_clear_in_direction(push_direction, push_distance)"
            ],
            "post_conditions": [
                "object_displaced(obj_id, push_direction, push_distance_approx)"
            ]
        },
        {
            "id": "slide_object_on_surface",
            "description": "Slide a held or contacted object along a surface to a target pose",
            "parameters": [
                "obj_id",
                "target_pose"
            ],
            "pre_conditions": [
                "object_on_surface(obj_id)",
                "contact_or_grasp_established(obj_id)",
                "surface_low_friction_or_push_feasible"
            ],
            "post_conditions": [
                "object_on_surface(obj_id, target_pose)"
            ]
        },
        {
            "id": "activate_switch",
            "description": "Toggle a binary switch, button, or control to the ON state",
            "parameters": [
                "switch_id"
            ],
            "pre_conditions": [
                "switch_reachable(switch_id)",
                "switch_state(switch_id) != on"
            ],
            "post_conditions": [
                "switch_state(switch_id) == on"
            ]
        },
        {
            "id": "deactivate_switch",
            "description": "Toggle a binary switch, button, or control to the OFF state",
            "parameters": [
                "switch_id"
            ],
            "pre_conditions": [
                "switch_reachable(switch_id)",
                "switch_state(switch_id) != off"
            ],
            "post_conditions": [
                "switch_state(switch_id) == off"
            ]
        },
        {
            "id": "turn_knob_to_setting",
            "description": "Rotate a knob or dial (e.g., stove burner control, microwave timer) to a specific setting",
            "parameters": [
                "knob_id",
                "target_setting"
            ],
            "pre_conditions": [
                "knob_reachable(knob_id)",
                "knob_setting(knob_id) != target_setting"
            ],
            "post_conditions": [
                "knob_setting(knob_id) == target_setting"
            ]
        },
        {
            "id": "verify_object_state",
            "description": "Sense and confirm the state or pose of an object (e.g., inside container, on surface)",
            "parameters": [
                "obj_id",
                "expected_state"
            ],
            "pre_conditions": [
                "object_visible_or_sensed(obj_id)"
            ],
            "post_conditions": [
                "belief_updated(obj_id, expected_state)"
            ]
        },
        {
            "id": "verify_articulation_state",
            "description": "Sense and confirm the state of an articulated element (open/closed)",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "joint_observable(joint_id)"
            ],
            "post_conditions": [
                "belief_updated(joint_id, joint_state(joint_id))"
            ]
        },
        {
            "id": "align_above_target",
            "description": "Align the held object directly above a target object or region at a safe height",
            "parameters": [
                "target_id",
                "above_height"
            ],
            "pre_conditions": [
                "object_held != null",
                "target_known(target_id)",
                "kinematically_reachable(above_pose(target_id, above_height))"
            ],
            "post_conditions": [
                "ee_at_pose == above_pose(target_id, above_height)"
            ]
        },
        {
            "id": "insert_object_into_opening",
            "description": "Insert a held object into an opening or cavity (e.g., into microwave, cabinet, or sink volume)",
            "parameters": [
                "opening_id",
                "insertion_pose"
            ],
            "pre_conditions": [
                "object_held != null",
                "opening_accessible(opening_id)",
                "kinematically_reachable(insertion_pose)"
            ],
            "post_conditions": [
                "object_inside_opening(object_held, opening_id)"
            ]
        },
        {
            "id": "move_object_relative",
            "description": "Move a held object along a relative displacement vector without changing its grasp",
            "parameters": [
                "translation_vector",
                "rotation_delta"
            ],
            "pre_conditions": [
                "object_held != null",
                "motion_feasible(translation_vector, rotation_delta)"
            ],
            "post_conditions": [
                "held_object_pose_updated_by(translation_vector, rotation_delta)"
            ]
        },
        {
            "id": "stabilize_object_in_grasp",
            "description": "Adjust grip force or pose to ensure a stable grasp on the object",
            "parameters": [
                "obj_id"
            ],
            "pre_conditions": [
                "object_held == obj_id"
            ],
            "post_conditions": [
                "grasp_stable(obj_id)"
            ]
        }
    ]
}
{
    "atomic_library": [
        {
            "id": "open",
            "description": "Actuate a mechanism to move it to the open state (door, lid, drawer, appliance door).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: closed"
            ],
            "post_conditions": [
                "[joint_id] is in state: open",
                "end_effector is empty"
            ]
        },
        {
            "id": "close",
            "description": "Actuate a mechanism to move it to the closed state (door, lid, drawer, appliance door).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: open"
            ],
            "post_conditions": [
                "[joint_id] is in state: closed",
                "end_effector is empty"
            ]
        },
        {
            "id": "power_on",
            "description": "Set a device or appliance to the ON state (e.g., stove, microwave).",
            "parameters": [
                "device_id"
            ],
            "pre_conditions": [
                "[device_id] is in state: off",
                "[device_id] is accessible"
            ],
            "post_conditions": [
                "[device_id] is in state: on"
            ]
        },
        {
            "id": "pick_up",
            "description": "Approach, grasp, and lift an object.",
            "parameters": [
                "obj_id"
            ],
            "pre_conditions": [
                "[obj_id] is at rest and not grasped",
                "end_effector is empty",
                "[obj_id] is accessible"
            ],
            "post_conditions": [
                "end_effector holds [obj_id]",
                "[obj_id] is lifted from support"
            ]
        },
        {
            "id": "place",
            "description": "Lower and release a held object onto or into a target location/object.",
            "parameters": [
                "obj_id",
                "target_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "[target_id] is accessible"
            ],
            "post_conditions": [
                "[obj_id] is supported by [target_id]",
                "end_effector is empty"
            ]
        },
        {
            "id": "place_relative",
            "description": "Place a held object at a pose satisfying a spatial relation to a reference object (e.g., left_of, right_of, in_front_of, behind).",
            "parameters": [
                "obj_id",
                "reference_id",
                "relation",
                "offset"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "[reference_id] is detected and localized",
                "target region relative to [reference_id] is unoccupied"
            ],
            "post_conditions": [
                "[obj_id] is placed [relation] [reference_id] within [offset] tolerance",
                "end_effector is empty"
            ]
        }
    ]
}
{
    "atomic_library": [
        {
            "id": "open",
            "description": "Actuate a mechanism to transition a jointed component (door, drawer, lid) to an open state.",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: closed"
            ],
            "post_conditions": [
                "[joint_id] is in state: open",
                "end_effector is empty"
            ]
        },
        {
            "id": "close",
            "description": "Actuate a mechanism to transition a jointed component (door, drawer, lid) to a closed state.",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: open"
            ],
            "post_conditions": [
                "[joint_id] is in state: closed",
                "end_effector is empty"
            ]
        },
        {
            "id": "pick_up",
            "description": "Approach, grasp, and lift an object from its support surface.",
            "parameters": [
                "obj_id"
            ],
            "pre_conditions": [
                "[obj_id] is at rest and not grasped",
                "end_effector is empty"
            ],
            "post_conditions": [
                "end_effector holds [obj_id]",
                "[obj_id] is lifted from support"
            ]
        },
        {
            "id": "place",
            "description": "Lower and release a held object onto or into a target location.",
            "parameters": [
                "obj_id",
                "target_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "[target_id] is accessible"
            ],
            "post_conditions": [
                "[obj_id] is supported by [target_id]",
                "end_effector is empty"
            ]
        },
        {
            "id": "turn_on",
            "description": "Interact with a control interface to transition a device to an active state.",
            "parameters": [
                "device_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[device_id] is in state: off"
            ],
            "post_conditions": [
                "[device_id] is in state: on",
                "end_effector is empty"
            ]
        }
    ]
}
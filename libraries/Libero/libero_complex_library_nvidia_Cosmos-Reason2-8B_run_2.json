{
    "atomic_library": [
        {
            "id": "open",
            "description": "Actuate a mechanism to open it (door, cabinet, drawer, appliance door).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: closed"
            ],
            "post_conditions": [
                "[joint_id] is in state: open",
                "end_effector is empty"
            ]
        },
        {
            "id": "close",
            "description": "Actuate a mechanism to close it (door, cabinet, drawer, appliance door).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: open"
            ],
            "post_conditions": [
                "[joint_id] is in state: closed",
                "end_effector is empty"
            ]
        },
        {
            "id": "turn_on",
            "description": "Activate an electrical device via its switch or button",
            "parameters": [
                "device_id"
            ],
            "pre_conditions": [
                "device_id is powered off",
                "end_effector is empty"
            ],
            "post_conditions": [
                "device_id is powered on",
                "end_effector is empty"
            ]
        },
        {
            "id": "pick_up",
            "description": "Approach, grasp, and lift an object",
            "parameters": [
                "obj_id"
            ],
            "pre_conditions": [
                "[obj_id] is at rest and not grasped",
                "end_effector is empty"
            ],
            "post_conditions": [
                "end_effector holds [obj_id]",
                "[obj_id] is lifted from support"
            ]
        },
        {
            "id": "place",
            "description": "Lower and release a held object onto or into a target location/object",
            "parameters": [
                "obj_id",
                "target_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "target_id is accessible"
            ],
            "post_conditions": [
                "[obj_id] is supported by [target_id]",
                "end_effector is empty"
            ]
        },
        {
            "id": "move",
            "description": "Transport an object from one location to another",
            "parameters": [
                "obj_id",
                "destination_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "destination_id is reachable"
            ],
            "post_conditions": [
                "[obj_id] is at [destination_id]",
                "end_effector is empty"
            ]
        }
    ]
}
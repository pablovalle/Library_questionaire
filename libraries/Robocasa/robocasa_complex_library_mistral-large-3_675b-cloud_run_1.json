{
    "atomic_library": [
        {
            "id": "pick_up",
            "description": "Approach, grasp, and lift an object.",
            "parameters": [
                "obj_id"
            ],
            "pre_conditions": [
                "[obj_id] is at rest and not grasped",
                "end_effector is empty"
            ],
            "post_conditions": [
                "end_effector holds [obj_id]",
                "[obj_id] is lifted from support"
            ]
        },
        {
            "id": "place",
            "description": "Lower and release a held object onto or into a target location/object.",
            "parameters": [
                "obj_id",
                "target_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "target_id is accessible"
            ],
            "post_conditions": [
                "[obj_id] is supported by [target_id]",
                "end_effector is empty"
            ]
        },
        {
            "id": "open",
            "description": "Actuate a mechanism to open it (door, cabinet, drawer, appliance door).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: closed"
            ],
            "post_conditions": [
                "[joint_id] is in state: open",
                "end_effector is empty"
            ]
        },
        {
            "id": "close",
            "description": "Actuate a mechanism to close it (door, cabinet, drawer, appliance door).",
            "parameters": [
                "joint_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[joint_id] is in state: open"
            ],
            "post_conditions": [
                "[joint_id] is in state: closed",
                "end_effector is empty"
            ]
        },
        {
            "id": "turn_on",
            "description": "Activate a device or appliance (stove burner, microwave, water faucet).",
            "parameters": [
                "device_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[device_id] is in state: off"
            ],
            "post_conditions": [
                "[device_id] is in state: on",
                "end_effector is empty"
            ]
        },
        {
            "id": "turn_off",
            "description": "Deactivate a device or appliance (stove burner, microwave, water faucet).",
            "parameters": [
                "device_id"
            ],
            "pre_conditions": [
                "end_effector is empty",
                "[device_id] is in state: on"
            ],
            "post_conditions": [
                "[device_id] is in state: off",
                "end_effector is empty"
            ]
        },
        {
            "id": "push",
            "description": "Apply force to slide an object along a surface.",
            "parameters": [
                "obj_id",
                "target_location"
            ],
            "pre_conditions": [
                "[obj_id] is at rest and accessible",
                "end_effector is empty"
            ],
            "post_conditions": [
                "[obj_id] is at [target_location]",
                "end_effector is empty"
            ]
        },
        {
            "id": "stack",
            "description": "Place an object on top of another object in a stable configuration.",
            "parameters": [
                "obj_id",
                "base_obj_id"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]",
                "[base_obj_id] is stable and accessible"
            ],
            "post_conditions": [
                "[obj_id] is stacked on [base_obj_id]",
                "end_effector is empty"
            ]
        },
        {
            "id": "orient",
            "description": "Adjust the pose of a held object (e.g., upside down).",
            "parameters": [
                "obj_id",
                "orientation"
            ],
            "pre_conditions": [
                "end_effector holds [obj_id]"
            ],
            "post_conditions": [
                "[obj_id] is in orientation: [orientation]",
                "end_effector holds [obj_id]"
            ]
        }
    ]
}